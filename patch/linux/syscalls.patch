+                                                                        \
+        if (cloudover_ptr_##name != NULL &&                             \
+            current != NULL &&                                          \
+            current->cloudover_flags & 0x01)                            \
+            ret = cloudover_ptr_##name(__MAP(x,__SC_CAST,__VA_ARGS__)); \
+        else                                                            \
+            ret = SYSC##name(__MAP(x,__SC_CAST,__VA_ARGS__));	        \
