+/* CloudOver syscall registration */                                    \
+asmlinkage long (*cloudover_ptr_##name)(__MAP(x,__SC_LONG,__VA_ARGS__)) = NULL; \
+asmlinkage void cloudover_set_##name(void *ptr);                        \
